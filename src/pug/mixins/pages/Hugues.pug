    .col-md-10.col-lg-12
      .overflow-hidden
        h4(data-zanim-xs!={delay: 0.1}) Hugues Perret
      .overflow-hidden
        a(href='https://community.theta360.guide/u/hugues/summary') 
          h6.text-700.fw-normal.text-uppercase.ls.mb-4(data-zanim-xs!={delay: 0.2}) @Hugues
    .col-md-7.col-lg-12
      .overflow-hidden
